<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
<android.support.v7.widget.Toolbar
    android:id="@+id/tl_choose_count"
    android:layout_width="match_parent"
    app:navigationIcon="@drawable/ic_action_back"
    app:title="输入商品数量"
    android:layout_height="wrap_content">


</android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="400dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="400dp">

        <RelativeLayout
            android:background="@drawable/shape_keyborditem"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_change_item_name"
                android:layout_marginLeft="10dp"
                android:textColor="@color/TvBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_change_item_count"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"

                android:textColor="#000"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <include layout="@layout/key_bord"/>

    </LinearLayout>
    
</RelativeLayout>