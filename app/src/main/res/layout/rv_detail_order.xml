<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="81dp"
    android:background="#F9F9F9"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="41dp">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:textColor="@color/TvBlack"
            />

        <TextView
            android:id="@+id/tv_from_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_no"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintRight_toLeftOf="@id/tv_order_no_desc"
            android:text="门店"
            android:textSize="10sp"
            android:textColor="@color/TvBlack"
            android:layout_marginLeft="20dp"


            />


        <TextView
            android:textSize="10sp"
            android:visibility="visible"
            android:id="@+id/tv_order_no_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_from_source"
            app:layout_constraintRight_toLeftOf="@id/tv_order_no"
            android:layout_marginLeft="20dp"
            android:text="订单编号:"
            android:textColor="#666666"
            />

        <TextView
            android:textSize="10sp"
            android:visibility="visible"
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_order_no_desc"
            app:layout_constraintRight_toLeftOf="@id/tv_order_type_desc"
            android:text="E2200333edddf"
            android:layout_marginLeft="5dp"
            android:textColor="#666666"


            />
        <TextView
            android:textSize="10sp"
            android:visibility="visible"
            android:id="@+id/tv_order_type_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_order_no"
            app:layout_constraintRight_toLeftOf="@id/tv_order_type"
            android:layout_marginLeft="15dp"
            android:text="订单类型:"
            android:textColor="#666666"
            />
        <TextView
            android:textSize="10sp"
            android:visibility="visible"
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_order_type_desc"
           app:layout_constraintRight_toRightOf="parent"
            android:text="商品订单"
            android:textColor="#666666"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="50dp"
            />

        <TextView
            android:id="@+id/tv_order_trade_status"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="交易关闭"
            android:textColor="#FF9416"
              android:layout_marginRight="10dp"
            />

    </android.support.constraint.ConstraintLayout>


    <View

        android:id="@+id/view_divider"
        app:layout_constraintTop_toBottomOf="@id/cl_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EFEFEF"

        />

    <TextView


        android:id="@+id/tv_total_money"
        app:layout_constraintTop_toBottomOf="@id/view_divider"
        android:text="￥12.00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:textColor="@color/TvBlack"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_total_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_divider"
        app:layout_constraintRight_toLeftOf="@id/tv_total_money"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="总计:"
        android:layout_marginRight="5dp"
        android:textSize="10sp"

        android:textColor="@color/TvBlack"
        />
    <TextView

        app:layout_constraintRight_toLeftOf="@id/tv_total_desc"
        android:text="共计6件商品"
        android:textColor="@color/TvBlack"
        android:textSize="10sp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/view_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>
