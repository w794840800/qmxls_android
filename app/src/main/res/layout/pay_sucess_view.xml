<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:gravity="center"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pay_sucess"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="28sp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:text="支付成功"
        />



    <!--现金支付-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_price_detail"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
<TextView
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    android:textColor="#000"

    android:text="收款"
    />
        <TextView
            android:id="@+id/tv_pay_total"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#000"

            android:text="100.00元"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginLeft="30dp"
            android:text="找零"
            android:textColor="#000"

            />
        <TextView
            android:id="@+id/tv_return_money"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="50.00元"
            android:textColor="#000"

            />
    </LinearLayout>



    <!--储值充值-->

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_recharge"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_recharge_method"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="微信支付"
            android:textColor="#000"

            />
        <TextView
            android:id="@+id/tv_recharge_money"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="100.00元"
            android:textColor="#000"

            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#000"

            android:layout_marginLeft="30dp"
            android:text="账户余额"
            />
        <TextView
            android:id="@+id/tv_recharge_balance_total"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#000"
            android:text="50.00元"
            />
    </LinearLayout>




    <!--余额支付-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_price_blance"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="余额支付"
            android:textColor="#000"

            />
        <TextView
            android:id="@+id/tv_balance_total"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="100.00元"
            android:textColor="#000"

            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#000"

            android:layout_marginLeft="30dp"
            android:text="账户内剩余金额"
            />
        <TextView
            android:id="@+id/tv_balance_releave_oney"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#000"

            android:text="50.00元"
            />
    </LinearLayout>


    <!--混合支付-->
    <LinearLayout
        android:visibility="gone"

        android:id="@+id/ll_multipult"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#000"

                android:text="混合支付"
                />
            <TextView
                android:id="@+id/tv_multi_total"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#000"

                android:text="100.00元"
                />


        </LinearLayout>


        <LinearLayout
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000"

                android:text="(余额支付: "
                />
            <TextView
                android:id="@+id/tv_multi_balance_pay"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000"

                android:text="150.00元"
                />

            <TextView
                android:id="@+id/tv_other_pay_method"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000"

                android:layout_marginLeft="25dp"
                android:text="微信支付: "
                />
            <TextView
                android:id="@+id/tv_multi_other_pay"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"

                android:text="20.00元"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text=")"
                android:textColor="#000"

                />

        </LinearLayout>

    </LinearLayout>





    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_repeat_print"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重打小票"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/shape_bt_bg"
            android:textColor="#609ee9"
            />
        <TextView
            android:id="@+id/tv_continue"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续收款"
            android:layout_marginLeft="30dp"

            android:background="@drawable/shape_shoukuan_bg"
            android:textColor="@color/TvWhite"

            />
    </LinearLayout>

</LinearLayout>