<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:layout_marginLeft="20dp"

        >
        <TextView
            android:id="@+id/tv_client_name"
            android:layout_width="wrap_content"
            android:text="七仔"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_client_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:text="13399581538"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更换"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/bt_client_change"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"
            android:background="#609eeb"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
         android:paddingBottom="20dp"
            android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费次数:   "
            />

        <TextView
            android:id="@+id/tv_client_consume_numbe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            />
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最后消费时间:   "
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_client_last_consume_time"
            android:layout_width="wrap_content"
            android:text="2018-5-14"

            android:layout_height="wrap_content" />


    </LinearLayout>

    <include layout="@layout/item_sperator"/>
    <!--会员卡-->
    <LinearLayout
        android:id="@+id/lv_vip"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
        android:layout_marginLeft="20dp"
            android:text="会员卡"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:id="@+id/ll_vip_card"
            android:layout_width="200dp"
            android:background="@drawable/vip_bg"
            android:layout_height="100dp">

            <TextView

                android:id="@+id/tv_vip_style"
                android:text="白银卡"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_validity_period"
                android:text="永久有效"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/tv_discount"
                    android:text="9"
                    android:textSize="28sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/tv_discount"
                    android:text="折"
                    android:layout_marginLeft="5dp"

                    />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_vip_name"
                android:text="V1.0"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>




    </LinearLayout>

    <!--优惠券-->
    <LinearLayout
        android:id="@+id/lv_youhuiquan"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:text="优惠券"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/ll_coupons"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_coupons"
                android:layout_marginTop="10dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </android.support.v7.widget.RecyclerView>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>