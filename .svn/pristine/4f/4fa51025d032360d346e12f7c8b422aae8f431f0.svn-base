<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/rl_select_items"
    android:paddingTop="10dp"
    android:gravity="center_vertical"
    android:paddingBottom="10dp"
    >

    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:id="@+id/tv_goods_img"
        android:background="@drawable/default_user"
        android:layout_width="35dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_height="35dp" />

    <TextView
        android:textColor="#000"
        android:layout_alignParentLeft="true"
        android:text="火腿肠"
        android:layout_marginLeft="25dp"
        android:id="@+id/tv_goods_name"
        android:ellipsize="end"
        android:maxEms="5"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:paddingRight="10dp"
        android:layout_height="wrap_content">


        <TextView

            android:layout_marginLeft="8dp"
            android:textColor="#609ee9"
            android:gravity="right"
            android:id="@+id/tv_goods_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*1"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_goods_per_price"
            android:text="2.00"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_goods_total_price"
            android:gravity="right"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.00"
            />
        <TextView
            android:textColor="#fdae75"
            android:id="@+id/tv_goods_delete"
            android:text="删除"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />






    </LinearLayout>



</RelativeLayout>