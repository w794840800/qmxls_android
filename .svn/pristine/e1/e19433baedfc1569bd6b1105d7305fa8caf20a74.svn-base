<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="11"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/shape_gray_bg"

            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:id="@+id/rl_search_item1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/iv_search"
                android:src="@drawable/ic_action_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入商品条形码 商品简称搜索"
                android:textSize="16sp"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_toRightOf="@id/iv_search"
                />


        </RelativeLayout>





        <RelativeLayout
            android:id="@+id/rl_search_item2"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >


            <TextView
                android:layout_alignTop="@id/et_goods_search"
                android:layout_marginRight="15dp"
                android:id="@+id/tv_cancel"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="16sp"
                android:layout_alignBottom="@id/et_goods_search"
                android:background="#619CE8"
                android:text="取消"

                android:textColor="#fff" />

            <com.qimai.xinlingshou.CustomEditText
                android:id="@+id/et_goods_search"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableLeft="@drawable/ic_action_name"
                android:textSize="16sp"
                android:focusable="true"
                android:inputType="none"
                android:focusableInTouchMode="true"
                android:background="@drawable/shape_gray_bg"
                android:layout_toLeftOf="@id/tv_cancel"
                android:layout_marginLeft="15dp"
                android:hint="请输入商品条形码，商品简称搜索"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_goods_items"
            android:visibility="visible"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_empty"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shopping_cart"
                />
            <TextView
                android:layout_marginTop="15dp"
                android:text="还没收藏商品，请先添加"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        </LinearLayout>



