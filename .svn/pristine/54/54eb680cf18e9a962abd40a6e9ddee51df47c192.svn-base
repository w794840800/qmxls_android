<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:orientation="horizontal"
    android:id="@+id/ll_coupons_card"
    android:layout_width="200dp"
    android:background="@drawable/coupons_unselect"
    android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_coupons_style"
        android:text="面值券"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_coupons_conditions"
        android:text="满8元使用"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_info"
        android:text="有效期:  "
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_validity_period"
        android:layout_toRightOf="@id/tv_info"
        android:layout_alignParentBottom="true"
        android:text="2018.11.30-2018.12.30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="10sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/tv_cheap_money"
            android:text="5"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_discount"
            android:text="元"
            android:layout_marginLeft="5dp"

            />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_vip_name"
        android:text="V1.0"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>