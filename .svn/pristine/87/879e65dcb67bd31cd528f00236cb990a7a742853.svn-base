<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"


    android:gravity="center"
    android:layout_height="match_parent">


    <LinearLayout
        android:paddingLeft="10dp"
        android:background="@drawable/shape_round_white"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        >

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户账号:"
                android:textColor="@color/TvBlack"
                />

            <TextView
                android:id="@+id/tv_user_mobile"
                android:layout_width="wrap_content"
                android:text="18956000000"
                android:layout_marginLeft="10dp"
                android:textColor="@color/TvBlack"
                android:layout_height="wrap_content" />
        </LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:background="@color/TvGray"
    android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/TvBlack"
            android:layout_marginTop="20dp"
            android:text="储值卡充值:"
            />

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:gravity="center"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/tv_"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="24sp"
               android:textColor="#68c67c"
               android:text="300.00"
               android:layout_gravity="bottom"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="+"


               android:textSize="20sp"
               android:textColor="#68c67c"

               android:layout_gravity="bottom"               android:layout_marginLeft="5dp"

               />

           <TextView
               android:id="@+id/tv_presenter_money"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="50元"
               android:textSize="20sp"
               android:layout_marginLeft="5dp"
               android:textColor="#68c67c"
               android:layout_gravity="bottom"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="(赠送)"
               android:layout_gravity="bottom"

               />
       </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"


            >

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bt_bg"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:paddingRight="25dp"
                android:paddingBottom="15dp"
                android:text="取消"
                android:textColor="#609ee9" />


            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/shape_bt_bg"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:paddingRight="25dp"
                android:paddingBottom="15dp"

                android:text="确认"
                android:textColor="#609ee9"

                />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>